<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
           xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Shivani"/>
        <constructor-arg name="gender" value="Female"/>
        <constructor-arg name="age" value="20"/>
    </bean>
    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Poorvi"/>
        <constructor-arg index="1" value="21"/>
        <constructor-arg index="2" value="Female"/>
    </bean>
    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg type="java.lang.String" value="Manikanta"/>
        <constructor-arg type="java.lang.Integer" value="20"/>
        <constructor-arg type="java.lang.String" value="Male"/>
    </bean>
    <bean id="movie1" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor1"></constructor-arg>
    </bean>
    <bean id="movie2" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor2"></constructor-arg>
    </bean>
    <bean name="movie3,movie4" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor3"></constructor-arg>
    </bean>
</beans>

